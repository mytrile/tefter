
<h2>Sign In</h2>

<% semantic_form_for @user_session, :url => user_session_path do |f| -%>

  <%= f.error_messages -%>

  <% f.inputs do %>
    <%= f.input :email, :label => 'Email' %>
    <%= f.input :password, :label => 'Password' %>
  <% end %>

  <% f.buttons do  -%>
    <ol><li class="commit"><input class="create" type="submit" value="Sign In" /></li></ol>
  <% end -%>

<% end -%>
