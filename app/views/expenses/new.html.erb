<h2>Add New Expense</h2>

<% semantic_form_for @expense do |f| -%>

<% f.inputs do %>
  <%= f.input :amount, :label => 'I spent', :input_html => { :size => 10 } %>
  <%= f.input :title, :label => 'For' %>
  <%= f.input :category_name, :label => 'Category', :as => :string %>
<% end %>

<% f.buttons do  -%>
<%= f.commit_button -%>
<% end -%>

<% end -%>
